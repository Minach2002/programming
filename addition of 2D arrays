#include <stdio.h>

int main()
{
    int i,j,arr1[20][20],arr2[20][20],arr3[20][20];
    printf("ADDITION OF 2D ARRAYS");
    printf("\n......................");
    
    printf("\nEnter 1st 3x3 array");
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            printf("\nelement - [%d][%d] : ",i,j);
            scanf("%d",&arr1[i][j]);
        }
    }    
    
    printf("\nEnter 2nd 3x3 array:");
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            printf("\nelement - [%d][%d] : ",i,j);
            scanf("%d",&arr2[i][j]);
        }
    }    
    
    printf("\n1st matrix is:");
    for(i=0;i<3;i++){
        printf("\n");
        for(j=0;j<3;j++){
            printf("%d\t",arr1[i][j]);
        }
        
    }
    
    printf("\n2nd matrix is:");
    for(i=0;i<3;i++){
        printf("\n");
        for(j=0;j<3;j++){
            printf("%d\t",arr2[i][j]);
        }
        
    }
    
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            arr3[i][j]=arr1[i][j]+arr2[i][j];
        }
    }
    
     printf("\n Addition of 2 matrix is:");
    for(i=0;i<3;i++){
        printf("\n");
        for(j=0;j<3;j++){
            printf("%d\t",arr3[i][j]);
        }
        
    }
    
    
    
    
    
    return 0;
}
